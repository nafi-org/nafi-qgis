{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mypy-all-nafi_hires",
      "type": "shell",
      "command": "mypy . --show-column-numbers --show-error-codes --ignore-missing-imports",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "revealProblems": "never"
      },
      "problemMatcher": {
        "owner": "mypy",
        "source": "mypy-all-nafi_hires",
        "fileLocation": ["relative", "${workspaceFolder}/nafi_hires"],
        "pattern": {
          "regexp": "^([\\w.]+):(\\d+):(\\d+): (\\w+): (.+)  \\[([\\w-]+)\\]$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 6,
          "severity": 4,
          "message": 5
        }
      }
    }
  ]
}
